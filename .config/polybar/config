[colors]
red    = ${xrdb:color1}
yellow = ${xrdb:color4}
blue   = ${xrdb:color2}
white  = ${xrdb:color15}

[dims]
padding = 1

[bar/top]
width    = 1920
height   = 20
offset-x = 0
offset-y = 0

monitor           = eDP-1
override-redirect = false

font-0 = Hack:pixelsize=8;1
font-1 = FontAwesome:pixelsize=8;1
font-2 = Hack:pixelsize=7;2
font-3 = Hack:pixelsize=8
font-4 = Hack:size=7;1

background = #0000
foreground = ${colors.white}

modules-left   = bspwm
modules-center = 
modules-right  = cpu memory volume battery date
bottom = true

wm-restack    = bspwm

; bspwm
[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-focused            = "×"
label-focused-background = #0000
label-focused-foreground = ${colors.blue}
label-focused-padding    = 1

label-urgent = %name%
label-urgent-background = ${colors.blue}
label-urgent-foreground = #0000
label-urgent-padding = 1

label-empty            = %name%
label-empty-background = #0000
label-empty-foreground = ${colors.white}
label-empty-padding    = 1

label-occupied            = %name%
label-occupied-background = #0000
label-occupied-foreground = ${colors.blue}
label-occupied-padding    = 1

format-padding = 1

[module/memory]
type = internal/memory
interval = 3
format-padding = 1
label = %mb_used%%M

[module/cpu]
type = internal/cpu
interval = 0.5
format-padding = 1
label = CPU %percentage%%

[module/battery]
type    = internal/battery
battery = BAT0
adapter = ACAD
full-at = 95

format-padding = 1

format-charging            = <label-charging>
format-charging-foreground = ${colors.yellow}
format-charging-padding    = ${dims.padding}

format-discharging            = <ramp-capacity> <label-discharging>
format-discharging-padding    = ${dims.padding}

format-full            = <label-full>
format-full-background = ${colors.red}
format-full-foreground = ${colors.white}
format-full-padding    = ${dims.padding}

label-charging    = "↯ %percentage%% "
label-discharging = "↯ %percentage%% "
label-full        = Full Capacity

label-discharging-foreground = ${colors.white}

ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-foreground = ${colors.red}

; Date
[module/date]
type = internal/date
interval = 1.0

date = "%Y-%M-%d"

time-alt = %a %d %b
time     = %a %H:%M 

label             = %time%
format            = "<label>"
format-foreground = ${colors.white}
format-padding    = 2

; Volume
[module/volume]
type = internal/volume

format-volume = <ramp-volume><label-volume>
label-volume = "♪ %percentage%% "
label-volume-foreground = ${colors.white}
label-volume-padding = ${dims.padding}

ramp-headphone-0 = " "
ramp-headphone-1 = " "

ramp-volume-0 = " "
ramp-volume-1 = " " 
ramp-volume-2 = " " 
ramp-volume-foreground = ${colors.red}

format-muted = <label-muted>
label-muted = "M "
label-muted-foreground = ${colors.red}
label-muted-background = #0000
label-muted-padding = ${dims.padding}

[global/wm]
margin-top    = 1
margin-bottom = 1

