[colors]
red    = ${xrdb:color1}
yellow = ${xrdb:color3}
blue   = ${xrdb:color4}
white  = ${xrdb:color15}

[dims]
padding = 1

[bar/bottom]
width    = 100%
height   = 20
offset-x = 0
offset-y = 0

monitor           = ${env:MONITOR:}
override-redirect = false

font-0 = Hack:pixelsize=8;1
font-1 = Material Icons:pixelsize=8;1
font-2 = ubuntu:pixelsize=10;1
background = #0000
foreground = ${colors.white}

modules-left   = bspwm
modules-center =
modules-right  = wireless-network cpu memory volume battery date
bottom = true

wm-restack    = bspwm

tray-position = right

; bspwm
[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-focused            = %name%
label-focused-background = #0000
label-focused-foreground = ${colors.blue}
label-focused-font       = 1
label-focused-padding    = 1

label-urgent = %name%
label-urgent-background = ${colors.yellow}
label-urgent-foreground = #0000
label-urgent-padding = 1

label-empty            = %name%
label-empty-background = #0000
label-empty-foreground = ${colors.white}
label-empty-font       = 1
label-empty-padding    = 1

label-occupied            = %name%
label-occupied-background = #0000
label-occupied-foreground = ${colors.white}
label-occupied-padding    = 1

format-padding = 1

[module/memory]
type = internal/memory
interval = 3
format-padding = 1
label = %mb_used%

[module/wireless-network]
type = internal/network
interface = wlp3s0

label-connected =
label-disconnected = "[%ifname% ⨯]"
label-disconnected-padding = 1

[module/cpu]
type = internal/cpu
interval = 0.5
format-padding = 1
label = CPU %percentage%%

[module/battery]
type    = internal/battery
battery = BAT0
adapter = ACAD
full-at = 95

format-padding = 1

format-charging            = <label-charging>
format-charging-foreground = ${colors.yellow}
format-charging-padding    = ${dims.padding}

format-discharging            = <label-discharging>
format-discharging-padding    = ${dims.padding}

format-full            = <label-full>
format-full-background = ${colors.red}
format-full-foreground = ${colors.white}
format-full-padding    = ${dims.padding}

label-charging    = "↯ %percentage%% "
label-discharging = "↯ %percentage%% "
label-full        = "↯ full"

label-discharging-foreground = ${colors.white}

; Date
[module/date]
type = internal/date
interval = 1.0

date = "%Y-%M-%d"

time-alt = %a %d %b
time     = %a %H:%M

label             = %time%
format            = "<label>"
format-foreground = ${colors.white}
format-padding    = 2

; Volume
[module/volume]
type = internal/volume

format-volume = <label-volume>
label-volume = "♪ %percentage%% "
label-volume-foreground = ${colors.white}
label-volume-padding = ${dims.padding}

format-muted = <label-muted>
label-muted = "M "
label-muted-foreground = ${colors.red}
label-muted-background = #0000
label-muted-padding = ${dims.padding}

[global/wm]
margin-top    = 1
margin-bottom = 1
