super + Return
	termite

super + r
	rofi -show run

super + w
    rofi -show window

super + shift + r
	pkill -USR1 -x sxhkd

super + shift + q
	bspc quit

# close window
alt + q
	bspc node -{c,k}

# roll background
alt + shift + w
    feh -z --bg-scale ~/dotfiles/wallpaper

super + f
    state=fullscreen; \
    bspc query -N "focused.$\{state\}" && state=tiled; \
    bspc node -t "$state"

alt + shift + {l,h}
	$HOME/dotfiles/scripts/bspwm_resize.sh {east,west}

alt + shift + {j,k}
    $HOME/dotfiles/scripts/bspwm_resize.sh {south,north}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} $(bspc query -M -m --names)':^{1-9,10}'

alt + shift + {t,f}
	bspc node -t {tiled,floating}

# send focused node to non-focused monitor
super + o
    bspc node -d $(bspc query -M -m '.!focused' --names)":focused" --follow

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# rotate root tree
super + ctrl + Return
    bspc node -R 90

# focus parent
super + ctrl + Up
    bspc node -f @parent

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

super + alt + 1
    setxkbmap us
super + alt + 2
    setxkbmap de
